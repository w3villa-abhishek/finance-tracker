<%if @tracked_profiles.any?%>
    <div class="col-9">
        <table class="table">
          <thead class="thead">
            <tr>
              <th scope="col">S.no</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Action 1</th>
              <th scope="col">Action 2</th>


            </tr>
          </thead>
          <tbody>
            <% @tracked_profiles.each do |profile| %>
            <tr> 
              <th scope="row"><%=@count+=1%></th>
              <td><b><%=profile.full_name%></b></td>
              <td><%=profile.email%></td>
              <td><%=link_to 'Stop following',stop_tracking_path(friend: profile), method: :delete, data: {confirm: "are you sure to stop following #{profile.full_name}?"}, class: "btn-sm btn-danger"%></td>
              <td><%=link_to 'view stocks',tracked_portfolio_path(user: profile) ,class: "btn-sm btn-warning"%></td>
            </tr>
            <%end%>
          </tbody>
        </table>
    </div>
<%end%>